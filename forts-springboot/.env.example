# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Application Profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
# For local development:
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/forts_db?createDatabaseIfNotExist=true&useSSL=false
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_password_here

# For production (Railway/Render will provide these):
# DATABASE_URL=jdbc:mysql://host:port/database?options
# DATABASE_USERNAME=your_db_user
# DATABASE_PASSWORD=your_db_password

# Server Port (cloud platforms usually set this automatically)
PORT=8080
